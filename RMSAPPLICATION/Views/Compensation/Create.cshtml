@model RMSCORE.EF.CompensationDetail

@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "formEditID", id = "formEditID" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CandidateID)
    @Html.HiddenFor(model => model.CID)
    <head>
        <style>
            .required:after {
                content: "*";
                font-weight: bold;
                color: red;
            }
        </style>
    </head>
    <div style="margin-top:-25px">
        <div class="modal-header">
            <div class="modal-title">
                <h3 class="text-black"><i class="icon-user-plus"></i>&nbsp;&nbsp;Compensation Details &nbsp;<small class="text-grey-400">(Please mention your current compensation)</small></h3>
            </div>
        </div>
        <!-- Page container -->
        <!-- Main content -->
        <!-- Basic datatable -->
        <div class="panel panel-flat">
            <div class="breadcrumb-line bg-green-600">
                <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
                <ul class="breadcrumb">
                    <li><a href="~/Job/Index">Dashboard</a></li>
                    <li><a class="active">Compensation</a></li>
                    <li class="active">- Add New</li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="control-label col-md-2 text-semibold">Monthly Basic Salary </div>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.MBSalary, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <label class="required col-md-2 control-label text-semibold">Monthly Gross Salary</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.MGSalary, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MGSalary, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12"><hr /></div>
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-3">
                        <label class=" checkbox-inline checkbox-right text-semibold col-md-5" for="Bonus">
                            @Html.CheckBox("Bonus", new { @class = "styled", @id = "Bonus" })
                            Bonus
                        </label>
                    </div>
                    <div id="Bonusdiv">
                        <div class="col-md-2">
                            <div class="radio-inline text-semibold">
                                @Html.RadioButton("BonusSelection", "BBonus", new { @class = "checked", @id = "BBonus" })
                                Basic
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="radio-inline text-semibold" for="GBonus">
                                @Html.RadioButton("BonusSelection", "GBonus", new { @class = "checked", @id = "GBonus" })
                                Gross
                            </label>
                        </div>
                        <label class="control-label col-md-2 text-semibold">No of Bonuses per year</label>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.BonusPerYear, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-3">
                        <label class="checkbox-inline checkbox-right text-semibold col-md-5" for="LFA">
                            @Html.CheckBox("LFA", new { @class = "styled", @id = "LFA" })
                            @Html.ValidationMessageFor(model => model.LFA, "", new { @class = "text-danger" })
                            LFA
                        </label>
                    </div>
                    <div id="LFAdiv">
                        <div class="col-md-2">
                            <div class="radio-inline text-semibold">
                                @Html.RadioButton("LFASelection", "BLFA", new { @class = "checked", id = "BLFA" })
                                Basic
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="radio-inline text-semibold" for="GLFA">
                                @Html.RadioButton("LFASelection", "GLFA", new { @class = "checked", id = "GLFA" })
                                Gross
                            </label>
                        </div>
                        <label class="control-label col-md-2 text-semibold">No of LFA's per year</label>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.LFAPerYear, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-3">
                        <label class="checkbox-inline checkbox-right text-semibold col-md-5" for="OT">
                            @Html.CheckBox("OT", new { @class = "styled", @id = "OT" })
                            @Html.ValidationMessageFor(model => model.OT, "", new { @class = "text-danger" })
                            Overtime
                        </label>
                    </div>
                    <div id="OTdiv">
                        <div class="col-md-2">
                            <div class="radio-inline text-semibold">
                                @Html.RadioButton("OTselection", "BOT", new { @class = "checked", id = "BOT" })
                                Basic
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="radio-inline text-semibold" for="GOT">
                                @Html.RadioButton("OTselection", "GOT", new { @class = "checked", id = "GOT" })
                                Gross
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 form-group">
                    <div class="control-label text-black h5" style="font-weight:900">Allowance</div>
                    <hr />
                </div>

                <div class="form-group col-md-12">
                    <div class="col-md-1 control-label text-semibold">Transport Allowance</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.TransportAllowence, new { htmlAttributes = new { @class = "form-control", @placeholder = "Rs." } })
                    </div>
                    <div class="col-md-1 control-label text-semibold">Vehical Entitlement</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.CarEntitlement, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g Honda 1300CC" } })
                    </div>
                    <div class="col-md-3">
                        <label class="checkbox-inline checkbox-right text-semibold col-md-10" for="BuyBackOption">
                            @Html.CheckBox("BuyBackOption", new { @class = "styled" })
                            @Html.ValidationMessageFor(model => model.BuyBackOption, "", new { @class = "text-danger", @id = "BuyBackOption" })
                            Buy Back Option
                        </label>
                    </div>
                    <div id="buybackdiv">
                        <div class="col-md-1 control-label text-semibold">Specify Years</div>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.SpecifyYears, new { htmlAttributes = new { @class = "form-control", @placeholder = "Years" } })
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-12">

                    <div class="col-md-1 control-label text-semibold">Fuel Allowance</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.FuelAllowance, new { htmlAttributes = new { @class = "form-control", @placeholder = "Amount/Litres" } })
                    </div>
                    <div class="col-md-1 control-label text-semibold">Accomod Allowance</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.AccomdAllowence, new { htmlAttributes = new { @class = "form-control", @placeholder = "Specify Amount" } })
                    </div>
                    <div class="col-md-1 control-label text-semibold">Mobile  Allowance</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.MobileAllowence, new { htmlAttributes = new { @class = "form-control", @placeholder = "Rs." } })
                    </div>
                    <div class="col-md-1 control-label text-semibold">Mobile  User Limit</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.MobileUserLimit, new { htmlAttributes = new { @class = "form-control", @placeholder = "Rs." } })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <div class="col-md-1 control-label text-semibold">COLA</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.COLA, new { htmlAttributes = new { @class = "form-control", @placeholder = "Rs." } })
                    </div>
                    <div class="col-md-1 control-label text-semibold">Others</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Other, new { htmlAttributes = new { @class = "form-control", @placeholder = "If any" } })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label checkbox-inline checkbox-right text-semibold col-md-10" for="Food">
                            @Html.CheckBox("Food", new { @class = "styled" })
                            @Html.ValidationMessageFor(model => model.Food, "", new { @class = "text-danger" })
                            Food
                        </label>
                    </div>
                    <div id="fooddiv">
                        <div class="col-md-2">
                            <div class="radio-inline text-semibold">
                                @Html.RadioButton("FoodSelection", "Free", new { @class = "checked", id = "Free" })
                                Free
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="radio-inline text-semibold" for="Subsidized">
                                @Html.RadioButton("FoodSelection", "Subsidized", new { @class = "checked", id = "Subsidized" })
                                Subsidized
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 form-group">
                    <div class="control-label text-black h5" style="font-weight:900">Insurance and Coverage</div>
                    <hr />
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-1 control-label text-semibold">OPD Limit</div>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.OPDInsurance, new { htmlAttributes = new { @class = "form-control",@placeholder="Specify the Limit" } })
                    </div>
                    <label class="col-md-1 control-label text-semibold">IP Limit</label>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.IPInsurance, new { htmlAttributes = new { @class = "form-control", @placeholder = "Specify the Limit" } })
                    </div>
                    <div class="col-md-1 control-label text-semibold">Life Insurance</div>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.LifeInsurance, new { htmlAttributes = new { @class = "form-control", @placeholder = "Specify the Limit" } })
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-4">
                        <label class="checkbox-inline checkbox-right text-semibold col-md-5" for="ProvidentFund">
                            @Html.CheckBox("ProvidentFund", new { @class = "styled", @id = "ProvidentFund" })
                            @Html.ValidationMessageFor(model => model.ProvidentFund, "", new { @class = "text-danger" })
                            Provident Fund
                        </label>
                    </div>
                    <div id="Providentdiv">
                        <div class="col-md-2">
                            <div class="radio-inline text-semibold">
                                @Html.RadioButton("Providentselection", "BProvidentFund", new { @class = "checked", id = "BProvidentFund" })
                                Basic
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="radio-inline text-semibold">
                                @Html.RadioButton("Providentselection", "GProvidentFund", new { @class = "checked", id = "GProvidentFund" })
                                Gross
                            </div>
                        </div>
                        <div class="control-label col-md-2 text-semibold">If Yes then %</div>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.ProvidentFundPerYear, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-4">
                        <label class="checkbox-inline checkbox-right text-semibold col-md-5" for="Gratuity">
                            @Html.CheckBox("Gratuity", new { @class = "styled", @id = "Gratuity" })
                            @Html.ValidationMessageFor(model => model.Gratuity, "", new { @class = "text-danger" })
                            Gratuity
                        </label>
                    </div>
                    <div id="Gratuitydiv">
                        <div class="col-md-2">
                            <div class="radio-inline text-semibold">
                                @Html.RadioButton("GratuitySelection", "BGratuity", new { @class = "checked", id = "BGratuity" })
                                Basic
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="radio-inline text-semibold">
                                @Html.RadioButton("GratuitySelection", "GGratuity", new { @class = "checked", id = "GGratuity" })
                                Gross
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 form-group">
                    <div class="control-label text-black h5" style="font-weight:900">Leaves</div>
                    <hr />
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-2 control-label text-semibold">Annual</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.AnnualTAllowence, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <label class="col-md-2 control-label text-semibold">Casual</label>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.CasualTAllowence, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-2 control-label text-semibold">Sick</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.MedTAllowence, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-2 control-label text-semibold">Working Days/Week</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.TAllowenceWorkDay, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <label class="col-md-2 control-label text-semibold">Expected Salary</label>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.ExpectedSalary, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-2 control-label text-semibold">Any other Benifit</div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.OtherBenifits, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

            <div class="panel-footer">
                <a class="heading-elements-toggle"><i class="icon-more"></i></a>
                <div class="heading-elements">
                    <button type="button" id="btnPostCreate" class="btn btn-success heading-btn pull-right">Save</button>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        SaveCompensationFunction();
            var model = {
                "BBonus": @Html.Raw(Json.Encode(Model.BBonus)),
                "GBonus": @Html.Raw(Json.Encode(Model.GBonus)),
                "BLFA": @Html.Raw(Json.Encode(Model.BLFA)),
                "GLFA": @Html.Raw(Json.Encode(Model.GLFA)),
                "BOT": @Html.Raw(Json.Encode(Model.BOT)),
                "GOT": @Html.Raw(Json.Encode(Model.GOT)),
                "BProvidentFund": @Html.Raw(Json.Encode(Model.BProvidentFund)),
                "GProvidentFund": @Html.Raw(Json.Encode(Model.GProvidentFund)),
                "BGratuity": @Html.Raw(Json.Encode(Model.BGratuity)),
                "GGratuity": @Html.Raw(Json.Encode(Model.GGratuity)),
                "Free": @Html.Raw(Json.Encode(Model.Free)),
                "Subsidized": @Html.Raw(Json.Encode(Model.Subsidized)),
                };
            FormControlsScriptEdit(model);
            CompensationDetailHide();
    });
</script>

