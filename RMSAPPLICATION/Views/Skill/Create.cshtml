@model RMSCORE.Models.Operation.VMSkillOperation
@{
    ViewBag.title = "Skill details";
    Layout = null;
}
@using (Html.BeginForm(null,null, FormMethod.Post, new { name = "formCreateID", id = "formCreateID" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CandidateID)
    <div class="modal-header bg-primary">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;Add Skill
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Enter Skill</div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.SkillTitle, new { htmlAttributes = new { @class = "form-control",placeholder="for example programming" } })
                    @Html.ValidationMessageFor(model => model.SkillTitle, "", new { @class = "text-danger" })
                </div>
                <div class="control-label col-md-1 text-semibold text-right">Level</div>
                <div class="col-md-3">
                    @Html.DropDownList("SLevelID", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SLevelID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Skill Description</div>
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @cols = 5, @rows = 1 ,placeholder= "max 250 character" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class=" btn bg-grey" name="Close" data-dismiss="modal">Close</button>
        <button type="button" id="btnPostCreate" class="btn bg-primary" value="Save">Save</button>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        SkillDetailPostCreate(@Model.CandidateID);
    });
</script>
