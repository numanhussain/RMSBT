@model RMSCORE.Models.Operation.VMReferenceOperation
@{
    ViewBag.title = "Reference details";
    Layout = null;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "formEditID", id = "formEditID" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CandidateID)
    @Html.HiddenFor(model => model.RefID1)
    @Html.HiddenFor(model => model.RefID2)
    <div class="modal-header bg-blue">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;Edit Reference Detail
        </h4>
    </div>
    <div class="modal-body">
        <div class="label label-info arrowed-right">Reference#1:Personal(should not be immediate relative)</div>
        <hr />
        <div class="form-horizontal">
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Reference Name</div>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.RefName1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RefName1, "", new { @class = "text-danger" })
                </div>
                <div class="control-label col-md-1 text-semibold text-right"> Designation</div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.RefDesignation1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RefDesignation1, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Organization</div>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Organization1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Organization1, "", new { @class = "text-danger" })
                </div>
                <div class="control-label col-md-1 text-semibold">Contact</div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.RefContact1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RefContact1, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">How long known?</div>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.HowLongKnown1, new { htmlAttributes = new { @class = "form-control", placeholder = "years" } })
                    @Html.ValidationMessageFor(model => model.HowLongKnown1, "", new { @class = "text-danger" })
                </div>
                <div class="control-label col-md-1 text-semibold">Email</div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.RefEmail1, new { htmlAttributes = new { @class = "form-control", placeholder = "abc@gmail.com" } })
                    @Html.ValidationMessageFor(model => model.RefEmail1, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="label label-info arrowed-right">Reference#2:Personal(should not be immediate relative)</div>
        <hr />
        <div class="form-horizontal">
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Reference Name</div>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.RefName2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RefName2, "", new { @class = "text-danger" })
                </div>
                <div class="control-label col-md-1 text-semibold text-right"> Designation</div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.RefDesignation2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RefDesignation2, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Organization</div>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Organization2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Organization2, "", new { @class = "text-danger" })
                </div>
                <div class="control-label col-md-1 text-semibold">Contact</div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.RefContact2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RefContact2, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">How long known?</div>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.HowLongKnown2, new { htmlAttributes = new { @class = "form-control", placeholder = "years" } })
                    @Html.ValidationMessageFor(model => model.HowLongKnown2, "", new { @class = "text-danger" })
                </div>
                <div class="control-label col-md-1 text-semibold">Email</div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.RefEmail2, new { htmlAttributes = new { @class = "form-control", placeholder = "abc@gmail.com" } })
                    @Html.ValidationMessageFor(model => model.RefEmail2, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class=" btn btn-primary bg-primary-300" name="Close" data-dismiss="modal">Close</button>
        <button type="button" id="btnPostCreate" class="btn btn-success bg-success-800" value="Save">Save</button>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        ReferenceDetailPostEdit(@Model.CandidateID);
    });
</script>

