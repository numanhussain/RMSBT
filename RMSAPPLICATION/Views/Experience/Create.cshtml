@model RMSCORE.Models.Operation.VMExperienceOperation
@{
    ViewBag.title = "Experience details";
    Layout = null;
}
@using (Html.BeginForm("Create", "Experience", FormMethod.Post, new { name = "formCreateID", id = "formCreateID" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CandidateID)
    <div class="modal-header bg-blue">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;Add Experience Detail
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="form-group col-md-6">
                        <label class="text-semibold">Designation</label>
                        <div>@Html.EditorFor(model => model.PositionTitle, new { htmlAttributes = new { @class = "form-control" } })</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-semibold">Employer</label>
                        <div>@Html.EditorFor(model => model.EmployerName, new { htmlAttributes = new { @class = "form-control" } })</div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group col-md-4">
                        <label class="text-semibold">Job Title</label>
                     @Html.EditorFor(model => model.JobTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.JobTitle, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="text-semibold">StartDate</label>
                        <div>@Html.TextBoxFor(x => x.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @Value = @DateTime.Today.ToString("yyyy-MM-dd") })</div>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="text-semibold">EndDate</label>
                        <div>@Html.TextBoxFor(x => x.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @Value = @DateTime.Today.ToString("yyyy-MM-dd")})</div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group col-md-4">
                        <label class="checkbox-inline text-semibold " for="CurrentlyWorking">
                            @Html.CheckBox("CurrentlyWorking")
                            @Html.ValidationMessageFor(model => model.CurrentlyWorking, "", new { @class = "text-danger" })
                            Currently Working
                        </label>
                    </div>
                    <div class="form-group col-md-8">
                        <label class="text-semibold">Address</label>
                        <div>@Html.TextAreaFor(model => model.Address, new { @class = "form-control", @cols = 5, @rows = 1 })</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-semibold">City</label>
                        <div>@Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-semibold">Industry</label>
                        <div>@Html.DropDownList("IndustryID", null, new { @class = "btn btn-default col-lg-12 col-sm-12 col-md-12" })
                        @Html.ValidationMessageFor(model => model.IndustryID, "", new { @class = "text-danger" })</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-semibold">Resposibilty</label>
                        <div>@Html.TextAreaFor(model => model.Description, new { @class = "form-control", @cols = 5, @rows = 1 })</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class=" btn btn-primary bg-primary-300" name="Close" data-dismiss="modal">Close</button>
       @* <button type="button" id="btnPostCreate" class="btn btn-success bg-success-800" value="Save">Save</button>*@
        <button type="submit" class="btn btn-success bg-success-800" value="Save">Save</button>
    </div>
}
