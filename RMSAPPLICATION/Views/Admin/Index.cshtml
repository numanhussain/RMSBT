@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}
@{RMSCORE.EF.V_UserCandidate LoggedInUser = (RMSCORE.EF.V_UserCandidate)HttpContext.Current.Session["LoggedInUser"];
    <!-- Page header -->
    <div class="page-header ">
        <div class="page-header-content">
            <div class="col-md-8">
                <h4><i class="icon-arrow-right6 position-left"></i> <span class="text-semibold" style="margin-top:10px">Admin Dashboard</span></h4>
            </div>
            @*<div class="col-md-4" style="padding-top:8px;">
                    <form class="form-inline" role="form">
                        <div class="form-group pull-right SearchBtnMargin">
                            @using (Html.BeginForm("Index", "Admin", FormMethod.Get))
                            {<p>
                                    Find: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Enter Name" })
                                    <input class="btn btn-sm bg-primary-600" type="submit" value="Search" />
                                </p>}
                        </div>
                    </form>
                </div>*@
        </div>
    </div>
    <!-- /page header -->
    <!-- Page container -->
    <div class="page-container">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Pagination types -->
                <div class="panel panel-flat">
                    <table class="table datatable-pagination">
                        <thead>
                            <tr>
                                <th class="text-semibold">
                                    Photo
                                </th>
                                <th>ID</th>
                                <th>Name</th>

                                <th>Email</th>

                                <th>
                                    Password
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Stage
                                </th>
                                <th>
                                    Personal
                                </th>
                                <th>
                                    Education
                                </th>
                                <th>
                                    Experience
                                </th>
                                <th>
                                    Skills
                                </th>
                                <th>
                                    Self-assesment
                                </th>
                                <th>
                                    Reference
                                </th>
                                <th>
                                    Miscellaneous
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @*@{ int a = 0; }*@
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Candidate/RetrieveImage/@item.UserID" id="imground" alt="" class="img-circle" height=30 width=35 />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CName)
                                    </td>
                                    @*<td>@(++a)</td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompletePassword)
                                    </td>
                                    <td>
                                        @if (item.DateCreated != null)
                                        {@item.DateCreated.Value.ToString("dd-MMM-yyyy")}
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserStage)
                                    </td>
                                    <td>
                                        @if (item.StepOne == true)
                                        {
                                            <i class="icon-checkmark3"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (item.StepTwo == true)
                                        {
                                            <i class="icon-checkmark3"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (item.StepThree == true)
                                        {
                                            <i class="icon-checkmark3"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (item.StepFour == true)
                                        {
                                            <i class="icon-checkmark3"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (item.StepFive == true)
                                        {
                                            <i class="icon-checkmark3"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (item.StepSix == true)
                                        {
                                            <i class="icon-checkmark3"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (item.StepSeven == true)
                                        {
                                            <i class="icon-checkmark3"></i>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /pagination types -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->
}



