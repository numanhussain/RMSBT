@model RMSCORE.Models.Operation.VMEduDetailOperation
@{
    ViewBag.title = "Educational details";
    Layout = null;
}
@using (Html.BeginForm(null,null, FormMethod.Post, new { name = "formEditID", id = "formEditID" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.EduID)
    @Html.HiddenFor(model =>model.CandidateID)
    <div class="modal-header bg-success-400">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;Edit Education Detail
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="form-group col-md-6">
                        <label class="text-semibold">Select Degree</label>
                        <div>
                            @Html.DropDownList("DegreeID", null, new { @class = "btn btn-default col-lg-12 col-sm-12 col-md-12" })
                            @Html.ValidationMessageFor(model => model.DegreeID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-semibold">Institution</label>
                        <div>
                            @Html.DropDownList("InstitutionID", null, new { @class = "btn btn-default col-lg-12 col-sm-12 col-md-12" })
                            @Html.ValidationMessageFor(model => model.InstitutionID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-semibold">Board</label>
                        <div>@Html.EditorFor(model => model.BoardName, new { htmlAttributes = new { @class = "form-control" } })</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-semibold">Passing Year</label>
                        <div>@Html.EditorFor(model => model.PassingYear, new { htmlAttributes = new { @class = "form-control" } })</div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-group col-md-6">
                        <label class="text-semibold">Start Date</label>
                        <div>
                            @Html.TextBoxFor(x => x.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-semibold">End Date</label>
                        <div>
                            @Html.TextBoxFor(x => x.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <div class="form-group col-md-3">
                        <label class="text-semibold">Total Marks</label>
                        <div>@Html.EditorFor(model => model.TotalMark, new { htmlAttributes = new { @class = "form-control" } })</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-semibold">Obtained Marks</label>
                        <div>@Html.EditorFor(model => model.ObtainedMark, new { htmlAttributes = new { @class = "form-control" } })</div>
                    </div>

                    <div class="form-group col-md-3">
                        <label class="text-semibold">Percentage</label>
                        <div>@Html.EditorFor(model => model.Percentage, new { htmlAttributes = new { @class = "form-control" } })</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-semibold">CGPA</label>
                        <div>@Html.EditorFor(model => model.CGPA, new { htmlAttributes = new { @class = "form-control" } })</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class=" btn btn-primary bg-primary-300" name="Close" data-dismiss="modal">Close</button>
        <button type="button" id="btnPostEdit" class="btn btn-success bg-success-800" value="Save">Save</button>
    </div>
} 
<script type="text/javascript">
    $(document).ready(function () {
        EduDetailPostEdit(@Model.CandidateID);
    });
</script>
