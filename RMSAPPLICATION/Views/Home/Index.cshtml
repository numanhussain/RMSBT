<!-- /page header -->
<!-- Page container -->
<div class="page-container">
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Basic datatable -->
            @using (Html.BeginForm("IndexSubmit", "Home", FormMethod.Post))
            {
                <div class="form-group form-inline pull-left" style="margin-top:10px; margin-left:10px">
                    @*<input type="text" class="form-control form-control" name="FilterBox" id="FilterBox" placeholder="Enter Keyword/Title" value="@ViewBag.FilterBox" />*@
                    @Html.DropDownList("LocationID", null, new { @class = "form-control form-control" })
                    @Html.DropDownList("CatagoryID", null, new { @class = "form-control form-control" })
                    <button type="Submit" class="form-control btn bg-primary">Search</button>
                </div>
            }

            @if (Model.Count > 0)
            {
                <div class="panel panel-flat">
                    <table class="table datatable-scroll-edit table-striped table-hover table-condensed">
                        <thead>
                            <tr class="bg-primary">
                                <th class="text-semibold">Job-ID</th>
                                <th class="text-semibold">Position Title</th>
                                <th class="text-semibold">Department</th>
                                @*<th class="text-semibold">Sub-Department</th>*@
                                <th class="text-semibold">Category</th>
                                <th class="text-semibold">Location</th>
                                <th class="text-semibold">Opening Date</th>
                                <th class="text-semibold">Closing Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="text-semibold">@item.JobID</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold"><a href="~/Job/JobDetailIndex?JobID=@item.JobID">@item.JobTitle</a></div>
                                        <div class="text-muted">Click on title for more information..</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold">@item.DepatmentName</div>
                                    </td>
                                    @*<td>
                                            <div class="text-semibold">@item.SubDepartmentName</div>
                                        </td>*@
                                    <td>
                                        <div class="text-semibold">@item.CatName</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold">@item.LocName</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold">@item.CreatedDate.Value.ToString("dd-MMM-yyyy")</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold">
                                            @if (item.DeadlineDate != null)
                                            {
                                                @item.DeadlineDate.Value.ToString("dd-MMM-yyyy")}
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="panel panel-flat border-left-danger">
                    <div class="panel-heading">
                        <h6 class="panel-title text-semibold text-center" style="margin-right:360px">Currently no job openings are available</h6>
                    </div>
                </div>
            }
            <!-- /basic datatable -->
            <small class="text-bold h6">
                Can't find a job that meets your background?  Create your profile for future consideration by registering yourself.&nbsp;<a href="~/Home/RegisterUser" class="">Register here</a>
            </small>
        </div>
        <!-- /main content -->
    </div>
    <!-- /page content -->
</div>
<!-- /page container -->
<div class="col-md-12">
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-lg ">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#57adef">
                    <img src="~/Theme/assets/images/bcl_logo_final.png" style="margin-top:-10px" class="pull-left" height="55" />
                    <button type="button" class="close text-white" data-dismiss="modal" style="margin-top:-10px"><strong>x</strong></button>
                    <h4 class="modal-title text-center text-white text-black"> BCL Management Trainee Program 2019</h4>

                </div>
                <div class="modal-body">
                    <div class="form-group" style="font-family:Calibri">
                        Bestway Cement Limited, (A company of Bestway Group, UK) the largest cement manufacturer of Pakistan announces its Management Trainee Program 2019.
                    </div>
                    <div class="form-group" style="font-family:Calibri">
                        We are seeking highly talented and motivated fresh graduates with excellent academic background for induction as Management Trainee Officers  for one year in the following areas:

                    </div>
                    <div class="form-group" style="font-family:Calibri">
                        Sales, Supply Chain, Human Resources, Administration, Plant Control, Finance, 	Internal Audit, Treasury, Budgeting & Reporting
                    </div>
                    <div class="col-md-3" style="font-family:Calibri">
                        <div class="panel bg-primary">
                            <div class="panel-heading">
                                <h5 class="panel-title text-bold text-center">Recruitment</h5>

                            </div>
                            <div class="panel-body ">
                                <ul>
                                    <li>
                                        Online Application
                                    </li>
                                    <li>
                                        Shortlisting
                                    </li>
                                    <li>
                                        Assessment Center
                                    </li>
                                    <li>
                                        Onboarding
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-1" style="margin-top:80px;text-align: center"><i class="glyphicon glyphicon-arrow-right"></i></div>
                    <div class="col-md-3" style="font-family:Calibri">
                        <div class="panel bg-orange-400">
                            <div class="panel-heading">
                                <h5 class="panel-title text-bold text-center">
                                    Development
                                </h5>

                            </div>
                            <div class="panel-body">
                                <ul>
                                    <li>
                                        Rotations

                                    </li>
                                    <li>Trainings</li>

                                    <li>
                                        Mentoring

                                    </li>
                                    <br />
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1" style="margin-top:80px;text-align: center"><i class="glyphicon glyphicon-arrow-right"></i></div>
                    <div class="col-md-3" style="font-family:Calibri">
                        <div class="panel bg-success-700">
                            <div class="panel-heading">
                                <h5 class="panel-title text-bold text-center">
                                    Completion
                                </h5>

                            </div>
                            <div class="panel-body">
                                <ul>
                                    <li>Final Assessment</li>
                                    <li>Graduation Ceremony</li>
                                    <li>Job Offer (based on position availability</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-blue-700" data-dismiss="modal">
                        <strong>Click here to Apply</strong>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#myModal").modal('show');
    });
</script>
