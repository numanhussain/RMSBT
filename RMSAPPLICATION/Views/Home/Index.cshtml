@model List<RMSCORE.Models.Main.VMOpenJobIndex>
@{
    ViewBag.title = "Job Portal";
    Layout = null;
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Careers&nbsp;at&nbsp;Bestway&nbsp;Cement&nbsp;Limited</title>
    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/core.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/components.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/colors.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script type="text/javascript" src="~/Theme/assets/js/plugins/loaders/pace.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/core/libraries/jquery.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/core/libraries/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/plugins/loaders/blockui.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/plugins/ui/nicescroll.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/plugins/ui/drilldown.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script type="text/javascript" src="~/Theme/assets/js/plugins/tables/datatables/datatables.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/plugins/forms/selects/select2.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/core/app.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/pages/datatables_basic.js"></script>
    <!-- /theme JS files -->
</head>
<div class="navbar navbar-inverse bg-primary">
    <div class="navbar-header">
        <div style="padding-left:20px; padding-top:10px;">
            @*<a><img src="~/Theme/assets/images/bcl_logo_final.png" height="30" /></a>
                <a><img class="logo-main scale-with-grid" src="~/Theme/assets/images/bcl_logo_final.png" /></a>*@
            <span class="h4 text-bold" style="padding-left:0px;">Careers&nbsp;at&nbsp;Bestway&nbsp;Cement&nbsp;Limited</span>
        </div>
    </div>
    <div class="navbar-collapse collapse" id="navbar-mobile">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="~/Home/Login"><small class="h6 text-bold">Apply Online</small></a>

            </li>

        </ul>
    </div>
</div>
<!-- Page container -->
<!-- Page header -->
<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h2><span class="text-semibold text-blue">Current Openings</span> </h2> <h6 class="text-semibold">See if you can find exciting challenges at Bestway</h6>
        </div>
        <div class="heading-elements">
            @using (Html.BeginForm("IndexSubmit", "Home", FormMethod.Post))
            {
                <div class="form-group form-inline col-md-12">
                    <input type="text" class="form-control col-md-4" name="FilterBox" id="FilterBox" placeholder="Enter Keyword/Title" value="@ViewBag.FilterBox" />
                    @Html.DropDownList("LocationID", null, new { @class = "form-control", style = "width: 250px;" })
                    @Html.DropDownList("CatagoryID", null, new { @class = "form-control", style = "width: 250px;" })
                    <button type="Submit" class="form-control btn btn-primary">Search</button>
                </div>
            }
        </div>
    </div>
</div>
<!-- /page header -->
<!-- Page container -->
<div class="page-container">
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Basic datatable -->


            @if (Model.Count > 0)
            {
                <div class="panel panel-flat">
                    <table class="table datatable-basic">
                        <thead>
                            <tr class="bg-green-600">
                                <th class="text-semibold">Job-ID</th>
                                <th class="text-semibold">Position Title</th>
                                <th class="text-semibold">Department</th>
                                <th class="text-semibold">Category</th>
                                <th class="text-semibold">Location</th>
                                <th class="text-semibold">Opening Date</th>
                                <th class="text-semibold">Closing Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="text-semibold">@item.JobID</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold"><a href="~/Job/JobDetailIndex?JobID=@item.JobID">@item.JobTitle</a></div>
                                        <div class="text-muted">Click on title for more information..</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold">@item.DepatmentName</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold">@item.CatName</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold">@item.LocName</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold">@item.CreatedDate.Value.ToString("MM/dd/yyyy")</div>
                                    </td>
                                    <td>
                                        <div class="text-semibold">@item.DeadlineDate.Value.ToString("MM/dd/yyyy")</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="panel panel-flat border-left-danger">
                    <div class="panel-heading">
                        <h6 class="panel-title">Currently No Job Openings are available  </h6>
                    </div>

                </div>
            }
            <!-- /basic datatable -->
            <small class="text-bold h6">
                Can't find a job that meets your background?  Create your profile for future consideration by registering yourself.&nbsp;<a href="~/Home/RegisterUser" class="">Register here</a>
            </small>
        </div>
        <!-- /main content -->
    </div>
    <!-- /page content -->
</div>
<!-- /page container -->
